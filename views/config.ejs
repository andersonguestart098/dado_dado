    <title>Configuração <%= pegar.nome %></title>
    <link rel="icon" sizes="any" type="image/svg+xml" href="/logoce.svg">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@1,300&display=swap');

        body {
            margin: 0;
            padding: 0;
        }
        #logo svg {
            width: 50px;
            height: 50px;
        }
        #logo {
            float: left;
            position: absolute;
            width: 100%;
            left: 15px;
            top: 10px;
            z-index: 2;
        }
        #main {
            margin-top: 70px;
        }
        li {
            font-family: 'Poppins', sans-serif;
            list-style: none;
            padding: 10px;
            background: #058FED;
            margin-top: 10px;
            border-radius: 10px;
            width: 1000px;
            text-align: center;
            color: #fff;
        }
        ul {
            margin-left: 10%;
            padding: 0;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 10;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            border-radius: 10px;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            border-radius: 10px;
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
            height: 100px;
        }

        .close {
            color: #ff0000;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <!-- The Modal -->
    <div id="myModal" class="modal">
    
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <p>Some text in the Modal..</p>
      </div>
    
    </div>


    
